class ConvertAnalogDigital:
    def __init__(self, vault, bitsAmount, maxVault):
        self.vault = vault
        self.bitsAmount = bitsAmount
        self.maxVault = maxVault
        self.maxNum = 0
        for n in range(bitsAmount):           
            self.maxNum += 2**n

    def ToDigital(self):
        regularValue = self.maxNum * (self.vault / self.maxVault)
        binValue = bin(int(regularValue))[2:]
        return binValue
    
    def SetDigitalValue(self, bin):
        regularValue = int(bin, 2)
        self.vault = regularValue / self.maxNum * self.maxVault
        

convert = ConvertAnalogDigital(4.3, 10, 5)
print(convert.ToDigital())
convert.SetDigitalValue("1111111111")
print(convert.ToDigital())
